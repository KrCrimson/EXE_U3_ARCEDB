@{
    ViewBag.Title = "Login";
}

<style>
    /* Estilos generales para el cuerpo y el fondo */
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f4f7f6; /* Fondo suave */
        display: flex;
        justify-content: center; /* Centrar horizontalmente */
        align-items: center; /* Centrar verticalmente */
        min-height: 100vh; /* Altura mínima para centrado vertical */
        margin: 0;
    }

    /* Contenedor principal del formulario */
    .login-container {
        background-color: #ffffff;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1); /* Sombra elegante */
        width: 100%;
        max-width: 400px;
        text-align: center;
    }

    /* Estilo para el título */
    h2 {
        color: #333;
        margin-bottom: 30px;
        font-weight: 600;
        font-size: 1.8em;
    }

    /* Estilos para el formulario */
    form {
        display: flex;
        flex-direction: column;
        gap: 20px; /* Espacio entre elementos del formulario */
    }

    /* Estilos para las etiquetas y campos de entrada */
    label {
        text-align: left;
        display: block;
        margin-bottom: 5px;
        color: #555;
        font-weight: 500;
    }

    input[type="text"],
    input[type="password"] {
        width: 100%;
        padding: 12px;
        border: 1px solid #ddd;
        border-radius: 8px;
        box-sizing: border-box; /* Incluir padding en el ancho total */
        transition: border-color 0.3s;
        font-size: 1em;
    }

        input[type="text"]:focus,
        input[type="password"]:focus {
            border-color: #007bff; /* Color al enfocar */
            outline: none;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.2);
        }

    /* Estilos para el botón de enviar */
    button[type="submit"] {
        background-color: #007bff;
        color: white;
        padding: 14px 20px;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        font-size: 1.1em;
        font-weight: 600;
        transition: background-color 0.3s, transform 0.1s;
        margin-top: 10px;
    }

        button[type="submit"]:hover {
            background-color: #0056b3; /* Color más oscuro al pasar el ratón */
        }

        button[type="submit"]:active {
            transform: translateY(1px); /* Efecto de "clic" */
        }

    /* Estilos para el mensaje de error */
    .error-message {
        color: #dc3545; /* Rojo de error */
        background-color: #f8d7da; /* Fondo suave para el error */
        border: 1px solid #f5c6cb;
        padding: 10px;
        border-radius: 8px;
        margin-top: 20px;
        font-weight: 500;
    }
</style>

<div class="login-container">
    <h2>Login</h2>
    <form method="post">
        <div>
            <label for="username">Usuario:</label>
            <input type="text" id="username" name="username" required />
        </div>
        <div>
            <label for="password">Contraseña:</label>
            <input type="password" id="password" name="password" required />
        </div>
        <button type="submit">Entrar</button>
    </form>

    @if (ViewBag.Error != null)
    {
        <div class="error-message">@ViewBag.Error</div>
    }
</div>